@{
    ViewData["Title"] = "Tiere bearbeiten";
}
@model IEnumerable<Tier>
<div>
    <a class="btn btn-primary" asp-action="Create">+ Tier</a>
    <table>
        <thead>
            <tr>
                <th>ID</th><th>Tier</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Tier item in Model)
            {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Löschen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>